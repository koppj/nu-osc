%!GLoBES

$version="3.0.0"

/*****************************************************************
 * Author: PAN Machado 
 * Date: Oct 2012
 *
 * AEDL file for ICARUS 1209.0122
 *
 *****************************************************************/

/* ####### flux ####### */

nuflux(#ICARUS_SPECTRUM)<
        @flux_file = "./files/glb_ICARUS_spectrum.dat"
        @time      =  1	/* POT */
        @power     =  1 	/* dummy */
        @norm      =  1
>

/* ######## Baseline setting ######## */

$profiletype = 3
$densitytab  = { 2.5 }  /* FIXME - is this ok? */
$lengthtab   = { 730  } /* km */


/* ####### Detector settings ####### */

$target_mass = 1  /* tons (fiducial mass) */


/* ####### Energy window ####### */

$emin        = 1	/* GeV */
$emax        = 30	/* GeV */
$bins	     = 1

$sampling_points = 30 /*  */

/* ######## Technical information ######## */

/* For globes probability engine */
$filter_state = 1		/* check it */
$filter_value = 2E-1		/* check it */

/* For my probability engine */
//$filter_state = 1
//$filter_value = 30

/* ####### Energy resolution ####### */

energy(#RESDUMMY)<
        @type = 1
        @sigma_e = {0, 0.01, 0}
>

/* ####### Cross sections ####### */

cross(#FLAT)<
	@cross_file = "./files/XFlat.dat"
>


/* ####### Channel definitions ####### */

/* SIGNALS */
channel(#mu_e)<
        @channel   =    #ICARUS_SPECTRUM:      +  :      mu  :      e : #FLAT : #RESDUMMY
>

channel(#mu_mu)<
        @channel   =    #ICARUS_SPECTRUM:      +  :      NOSC_mu  :      NOSC_mu : #FLAT : #RESDUMMY
>

/* ####### Setting the rules ####### */

rule(#NU_E_App)<
        @signal     = 1@#mu_e
        @background = 1@#mu_mu  /* this is for normalization purpose */

        @sys_on_function  = "chi_ICARUS"
	@sys_on_errors = {} 
        @sys_off_function = "chiZero"
        @energy_window = 10.0 : 30.0
>

