%!GLoBES
// See README file for citation and version information

$version="3.1.10" // Minimal GLoBES version required for this file

// Beam fluxes
nuflux(#jparc_nu_mu)<
  @flux_file = "t2k-spectrum-SK.dat"
  @time      = 1        // dummy
  @power     = 6.57e20  // protons on target
  @norm      = 1.31e-20 // Determined by matching onto predicted T2K no osc. spectrum
>


// Detector properties
// -------------------
$target_mass = 22.5      // kt (fiducial mass)

$profiletype = 3
$densitytab  = {2.6}     // g/cm^3, see Escudero thesis, p. 198
$lengthtab   = {295.0}   // km

// Binning
$emin        = 0.0       // GeV
$emax        = 7.0       // GeV
$binsize     = {         // Escudero p.117
                 0.05, 0.05, 0.05, 0.05, 0.05,  0.05, 0.05, 0.05, 0.05, 0.05,  
                 0.05, 0.05, 0.05, 0.05, 0.05,  0.05, 0.05, 0.05, 0.05, 0.05,  
                 0.05, 0.05, 0.05, 0.05, 0.05,  0.05, 0.05, 0.05, 0.05, 0.05,  
                 0.05, 0.05, 0.05, 0.05, 0.05,  0.05, 0.05, 0.05, 0.05, 0.05,  
                 0.05, 0.05, 0.05, 0.05, 0.05,  0.05, 0.05, 0.05, 0.05, 0.05,  
                 0.05, 0.05, 0.05, 0.05, 0.05,  0.05, 0.05, 0.05, 0.05, 0.05,  
                 0.25, 0.25, 0.25, 0.25,
                 0.5,  0.5,  0.5,  0.5,
                 1.0
               }

$sampling_min      = 0.0
$sampling_max      = 7.0
$sampling_stepsize = {         // Escudero p.117
                 0.05, 0.05, 0.05, 0.05, 0.05,  0.05, 0.05, 0.05, 0.05, 0.05,  
                 0.05, 0.05, 0.05, 0.05, 0.05,  0.05, 0.05, 0.05, 0.05, 0.05,  
                 0.05, 0.05, 0.05, 0.05, 0.05,  0.05, 0.05, 0.05, 0.05, 0.05,  
                 0.05, 0.05, 0.05, 0.05, 0.05,  0.05, 0.05, 0.05, 0.05, 0.05,  
                 0.05, 0.05, 0.05, 0.05, 0.05,  0.05, 0.05, 0.05, 0.05, 0.05,  
                 0.05, 0.05, 0.05, 0.05, 0.05,  0.05, 0.05, 0.05, 0.05, 0.05,  
                 0.25, 0.25, 0.25, 0.25,
                 0.5,  0.5,  0.5,  0.5,
                 1.0
               }
  
// Low-pass filter
$filter_state = 1
$filter_value = 0.05  // FIXME is this appropriate?


// Energy resolution
include "smear-cc-nu-qe.dat"
include "smear-cc-nu-nqe.dat"
include "smear-cc-nubar-qe.dat"
include "smear-cc-nubar-nqe.dat"
include "smear-nc.dat"

// Cross sections
cross(#CC)<
  @cross_file = "XCC.dat"
>

cross(#NC)<
  @cross_file = "XNC.dat"
>

cross(#QE)<
  @cross_file = "XQE.dat"
>

cross(#NQE)<
  @cross_file = "XNQE.dat"
>


