%!GLoBES

$version="3.0.0"

/* Author: PAN Machado 
 * Date: Mar 2012
 */

/* AEDL file for the Daya Bay
 * I am using
 * http://dayawane.ihep.ac.cn/docs/DYB_rate_prl_APS.pdf
 * or 1203.1669 for arXiv version
 */

/*********************************************
 * dbt is the time                           *
 * eff is the detector efficiency            *
 *********************************************/
/* Isotopic composition:                     */
/* (not important for rate analysis)         */
c1 = .488
c2 = .087
c3 = .359
c4 = .067
dbt // = 49/365
normalization = 0.827845*2 // two reactors per reactor site
dbpower = 2.9 // GWth
eff 
reactoron

/* ####### Reactor flux ####### */

nuflux(#U235)<
        @flux_file = "U235new.dat"
        @time      = dbt		/* years */
        @power     = dbpower 	/* GWth */
        @norm      = 1.298E5*normalization*eff*reactoron 
>

nuflux(#U238)<
        @flux_file = "U238new.dat"
        @time      = dbt		/* years */
        @power     = dbpower	/* GWth */
        @norm      = 1.298E5*normalization*eff*reactoron 
>

nuflux(#Pu239)<
        @flux_file = "Pu239new.dat"
        @time      = dbt		/* years */
        @power     = dbpower 	/* GWth */
        @norm      = 1.298E5*normalization*eff*reactoron 
>

nuflux(#Pu241)<
        @flux_file = "Pu241new.dat"
        @time      = dbt		/* years */
        @power     = dbpower	/* GWth */
        @norm      = 1.298E5*normalization*eff*reactoron 
>


/* ######## Baseline setting ######## */

$profiletype = 3
$densitytab  = { 1e-6 }
$lengthtab   = { 1.700  } /* needs to be set in program */


/* ####### Detector settings ####### */

$target_mass = 20  /* tons (fiducial mass) */


/* ####### Energy window ####### */

$emin        = 0.001482	/* GeV */
$emax        = 0.012782	/* GeV */
$bins     = 1

$sampling_points = 30

/* ######## Technical information ######## */

$filter_state = 0
$filter_value = 1e6//1e19


/* ####### Energy resolution ####### */

energy(#ERES)<
        @type = 1
        @sigma_e = {0.009,0.00237,0.0}
>


/* ####### Cross sections ####### */

cross(#Reactor_CC)<
        @cross_file = "Reactorxsec.dat"
>


/* ####### Channel definitions ####### */

channel(#nu_e_disappearance_CC_U235)<
        @channel   =    #U235:      -  :      e  :      e : #Reactor_CC : #ERES
>


channel(#nu_e_disappearance_CC_U238)<
        @channel   =    #U238:      -  :      e  :      e : #Reactor_CC : #ERES
>


channel(#nu_e_disappearance_CC_Pu239)<
        @channel   =    #Pu239:      -  :      e  :      e : #Reactor_CC : #ERES
>


channel(#nu_e_disappearance_CC_Pu241)<
        @channel   =    #Pu241:      -  :      e  :      e : #Reactor_CC : #ERES
>




/* ####### Setting the rules ####### */

rule(#NU_E_Disappearance_U235)<
        @signal     = c1@#nu_e_disappearance_CC_U235
   
        @background = 0.0@#nu_e_disappearance_CC_U235   /* No background */
        @energy_window = 0.0014 : 0.013

        @sys_off_function = "chiNoSysSpectrum"
        @sys_off_errors   = {}
        @sys_on_function  = "chiZero"
>



rule(#NU_E_Disappearance_U238)<
        @signal     = c2@#nu_e_disappearance_CC_U238
   
        @background = 0.0@#nu_e_disappearance_CC_U235   /* No background */
        @energy_window = 0.0014 : 0.013

        @sys_off_function = "chiNoSysSpectrum"
        @sys_off_errors   = {}
        @sys_on_function  = "chiZero"
>



rule(#NU_E_Disappearance_Pu239)<
        @signal     = c3@#nu_e_disappearance_CC_Pu239
   
        @background = 0.0@#nu_e_disappearance_CC_U235   /* No background */
        @energy_window = 0.0014 : 0.013

        @sys_off_function = "chiNoSysSpectrum"
        @sys_off_errors   = {}
        @sys_on_function  = "chiZero"
>



rule(#NU_E_Disappearance_Pu241)<
        @signal     = c4@#nu_e_disappearance_CC_Pu241
   
        @background = 0.0@#nu_e_disappearance_CC_U235   /* No background */
        @energy_window = 0.0014 : 0.013

        @sys_off_function = "chiNoSysSpectrum"
        @sys_off_errors   = {}
        @sys_on_function  = "chiZero"
>


/*********************************************************************

			GENERAL COMMENTS

# VERSION CONTROL:
# 

# FLUXES:
# PAN Machado
# 2012-jan
# The fluxes were calculated according to Mueller et al 2011
# UNITS: 1E-38/nucleon
# Filenames: Pu241new.dat Pu239new.dat U238new.dat U235new.dat

*********************************************************************/
